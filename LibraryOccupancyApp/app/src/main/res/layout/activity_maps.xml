<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:background="#f1f2f3">

    <android.support.v7.widget.Toolbar
        android:elevation="4dp"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLogo"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:focusable="false" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="-20dp"
            android:paddingRight="-20dp"
            android:weightSum="1"
            android:id="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/my_toolbar">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:text="Floor 1 Map"
                android:id="@+id/map1Button"
                android:textSize="16dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="40dp"
                android:textAllCaps="false"
                android:background="@drawable/floor1_map"
                android:onClick="map1ButtonOnClick"
                android:clickable="true"
                android:nestedScrollingEnabled="false"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:text="Floor 2 Map"
                android:id="@+id/map2Button"
                android:textSize="16dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="40dp"
                android:textAllCaps="false"
                android:background="@drawable/floor2_map"
                android:onClick="map2ButtonOnClick"
                android:clickable="true"
                android:nestedScrollingEnabled="false"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_marginLeft="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:text="Floor 3 Map"
                android:id="@+id/map3Button"
                android:textSize="16dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="40dp"
                android:textAllCaps="false"
                android:background="@drawable/floor3_map"
                android:onClick="map3ButtonOnClick"
                android:clickable="true"
                android:nestedScrollingEnabled="false"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_marginLeft="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:text="Floor 4 Map"
                android:id="@+id/map4Button"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:background="@drawable/floor4_map"
                android:onClick="map4ButtonOnClick"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="40dp"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_marginLeft="40dp" />/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Floor 5 Map"
                android:id="@+id/map5Button"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:background="@drawable/floor5_map"
                android:clickable="true"
                android:onClick="map5ButtonOnClick"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>